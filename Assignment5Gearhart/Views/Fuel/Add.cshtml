@model FuelRecordModel
@{
    ViewData["Title"] = "Add";
}

<h2>Add Record</h2>

<form asp-action="Add" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="mileage"></label>
        <input asp-for="mileage" />
    </div>
    <div class="form-group">
        <label asp-for="datePurchased"></label>
        <input asp-for="datePurchased" />
    </div>
    <div class="form-group">
        <label asp-for="numberGallons"></label>
        <input asp-for="numberGallons" />
    </div>
    <div class="form-group">
        <label asp-for="pricePaid"></label>
        <input asp-for="pricePaid" />
    </div>
    <input type="hidden" asp-for="FuelRecordModelId" />
    <button type="submit" class="btn btn-primary">Add</button>
    <a asp-controller="Fuel" asp-action="Display" class="btn btn-outline-warning">Cancel</a>
</form>